package poopgame.gamelogic;

import java.util.HashMap;
import java.util.Map;

import com.badlogic.gdx.physics.box2d.BodyDef;

public class Stats {
	
	private static final String HEALTH = "health";
	private static final String ENERGY = "energy";
	private static final String ENERGY_REGEN = "energyRegen";
	private static final String DAMAGE = "damage";
	private static final String SPEED = "speed";
	private static final String JUMP_FORCE = "jumpForce";
	private static final String POOPING_SPEED = "poppingSpeed";
	private static final String PLAYER_BODY = "playerBody";
	private static final String POOP_BODY = "poopBody";
	
	private Map<String, Object> statMap = new HashMap<String, Object>();
	
	public Stats() {
		setHealth(100);
		setEnergy(0);
		setEnergyRegen(100 / 60f);
		setDamage(10);
		setSpeed(7.5f);
		setJumpForce(10);
		setPoopingSpeed(1);
	}
	
	@SuppressWarnings("unchecked")
	public <T> T getStat(String statName, Class<T> statType){
		Object statValue = statMap.get(statName);
		if(statValue == null){
			return null;
		}else{
			if(statType.isAssignableFrom(statValue.getClass())){
				return (T) statMap.get(statName);
			}else{
				throw new IllegalArgumentException("getStat with name " + statName + " expected type " + statType.getName() + " but value is of type " + statValue.getClass().getName());
			}
		}
	}
	
	public <T> void setStat(String statName, T statValue){
		statMap.put(statName, statValue);
	}

	public int getHealth() {
		return getStat(HEALTH, Integer.class);
	}

	public void setHealth(int health) {
		setStat(HEALTH, health);
	}

	public int getEnergy() {
		return getStat(ENERGY, Integer.class);
	}

	public void setEnergy(int energy) {
		setStat(ENERGY, energy);
	}

	public float getEnergyRegen() {
		return getStat(ENERGY_REGEN, Float.class);
	}

	public void setEnergyRegen(float health) {
		setStat(ENERGY_REGEN, health);
	}

	public int getDamage() {
		return getStat(DAMAGE, Integer.class);
	}

	public void setDamage(int damage) {
		setStat(DAMAGE, damage);
	}

	public float getSpeed() {
		return getStat(SPEED, Float.class);
	}

	public void setSpeed(float speed) {
		setStat(SPEED, speed);
	}

	public float getJumpForce() {
		return getStat(JUMP_FORCE, Float.class);
	}

	public void setJumpForce(float jumpForce) {
		setStat(JUMP_FORCE, jumpForce);
	}

	public float getPoopingSpeed() {
		return getStat(POOPING_SPEED, Float.class);
	}

	public void setPoopingSpeed(float poopingSpeed) {
		setStat(POOPING_SPEED, poopingSpeed);
	}

	public BodyDef getPlayerBody() {
		return getStat(PLAYER_BODY, BodyDef.class);
	}

	public void setPlayerBody(BodyDef playerBody) {
		setStat(PLAYER_BODY, playerBody);
	}

	public BodyDef getPoopBody() {
		return getStat(POOP_BODY, BodyDef.class);
	}

	public void setPoopBody(BodyDef poopBody) {
		setStat(POOP_BODY, poopBody);
	}
	
	
	
	
	
}
