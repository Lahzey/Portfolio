package poopgame.gamelogic.engine.actions;

import java.util.Random;

import poopgame.gamelogic.Player;
import poopgame.gamelogic.engine.TimeEngine;

public class Action {
	
	private static final Random RANDOM = new Random();
	
	private final long id;
	private final ActionType type;
	private final Player player;
	
	public Action(ActionType type, Player player) {
		this.id = RANDOM.nextLong();
		this.type = type;
		this.player = player;
	}
	
	public void execute(TimeEngine engine) {
		player.executeAction(this, engine);
	}
	
	public long getId() {
		return id;
	}
	
	public ActionType getType() {
		return type;
	}

}
