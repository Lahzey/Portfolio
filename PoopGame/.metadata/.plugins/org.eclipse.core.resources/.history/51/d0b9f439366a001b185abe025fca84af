package poopgame.gamelogic.abilities.special;

import com.badlogic.gdx.audio.Sound;

import poopgame.gamelogic.AtomicPoop;
import poopgame.gamelogic.Player;
import poopgame.gamelogic.engine.TimeEngine;
import poopgame.util.InternalAssetLoader;

public class KimSpecial extends SpecialAbility {

	private static final Sound SOUND = InternalAssetLoader.getSound("nuke.mp3");
	private static final String ATOMIC_POOP_ID = "AtomicPoopID";

	@Override
	public void cast(TimeEngine engine) {
		if (poop == null) {
			poop = new AtomicPoop(super.player, new Runnable() {

				@Override
				public void run() {
					poop = null;
				}

			});
			
			poop.create(super.player.getGame());
			player.getStats().setEnergy(100);
			sound.play();

		} else {
			poop.destroy();
		}
	}

}