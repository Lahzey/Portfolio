package poopgame.desktop;

import java.awt.Canvas;

import com.badlogic.gdx.ApplicationListener;
import com.badlogic.gdx.backends.lwjgl.LwjglAWTCanvas;
import com.badlogic.gdx.graphics.GL20;
import com.badlogic.gdx.graphics.g2d.SpriteBatch;

import poopgame.gamelogic.PoopGame;
import poopgame.ui.InGameStage;

public class GdxWrapper implements ApplicationListener {

	public static InGameStage IN_GAME_STAGE;
	public static PoopGame GAME;

    private LwjglAWTCanvas lwjglCanvas;
    
    public GdxWrapper() {
    	lwjglCanvas = new LwjglAWTCanvas(this);
    }
    
    public Canvas getCanvas() {
    	return lwjglCanvas.getCanvas();
    } 

	@Override
	public void create() {
		GAME = new PoopGame(new SpriteBatch());
		IN_GAME_STAGE = new InGameStage(GAME);
	}

	@Override
	public void render() {
		lwjglCanvas.getGraphics().getGL20().glClear(GL20.GL_COLOR_BUFFER_BIT);
		lwjglCanvas.getGraphics().getGL20().glClearColor(255, 255, 255, 255);
		IN_GAME_STAGE.act(lwjglCanvas.getGraphics().getDeltaTime());
		IN_GAME_STAGE.draw();
	}

	@Override
	public void resize(int width, int height) {
		IN_GAME_STAGE.getViewport().update(width, height, true);
	}

	@Override
	public void pause() {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void resume() {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void dispose() {
		// TODO Auto-generated method stub
		
	}
}
