package poopgame.util;

import com.badlogic.gdx.graphics.g2d.Batch;
import com.badlogic.gdx.scenes.scene2d.ui.Label;

import poopgame.desktop.GameWrapper;
import poopgame.ui.InGameStage;

public class DynamicLabel extends Label{
	
	private DynamicString text;

	public DynamicLabel(DynamicString text) {
		super(text.getString(), InGameStage.SKIN);
		this.text = text;
	}
	
	
	
	@Override
	public void draw(Batch batch, float parentAlpha) {
		setText(text.getString());
		super.draw(batch, parentAlpha);
	}



	public static interface DynamicString{
		public String getString();
	}

}
