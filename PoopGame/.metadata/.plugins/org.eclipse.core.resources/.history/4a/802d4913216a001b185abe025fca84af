import com.sun.xml.internal.stream.Entity;

import poopgame.gamelogic.GameEntity;
import poopgame.util.InternalAssetLoader;

public class AutoMoveComponent extends LogicComponent {
	
	public String[] allyIds;
	
	public AutoMoveComponent() {}
	
	public AutoMoveComponent(Entity... allies) {
		allyIds = new String[allies.length];
		for (int i = 0; i < allies.length; i++) {
			allyIds[i] = GameEntity.getId(allies[i]);
		}
	}

	@Override
	public Object storeState(Engine engine, World world) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public void loadState(Object state, Engine engine, World world) {
		// TODO Auto-generated method stub
		
	}

}
