package poopgame.server;

import poopgame.gamelogic.Player;
import poopgame.gamelogic.engine.actions.Action;
import poopgame.gamelogic.engine.actions.ActionType;

public class ActionRequest {

	private long actionId;
	private ActionType actionType;
	private long playerId;
	
	private long actionTime;
	
	public ActionRequest() {}
	
	public ActionRequest(Action action) {
		actionId = action.getId();
		actionType = action.getType();
		playerId = action.getPlayer().getId();
		actionTime = action.getActionTime();
	}
	
}
