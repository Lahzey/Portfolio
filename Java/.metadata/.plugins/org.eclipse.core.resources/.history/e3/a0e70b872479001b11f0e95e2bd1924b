package game;

import java.awt.Graphics2D;
import java.util.HashSet;
import java.util.Set;

public abstract class GameObject {
	
	public final Set<GameObject> collidingWith = new HashSet<>();

	private float x = 0;
	private float y = 0;
	private float width = 0;
	private float height = 0;

	public float getX() {
		return x;
	}

	public void setX(float x) {
		this.x = x;
	}

	public int getPixelX(int gameSize) {
		return (int) ((x / Game.SIZE_IN_METERS) * gameSize);
	}

	public int getPixelMinX(int gameSize) {
		return (int) (((x - width / 2) / Game.SIZE_IN_METERS) * gameSize);
	}

	public float getY() {
		return y;
	}

	public void setY(float y) {
		this.y = y;
	}

	public int getPixelY(int gameSize) {
		return (int) ((y / Game.SIZE_IN_METERS) * gameSize);
	}

	public int getPixelMinY(int gameSize) {
		return (int) (((y - height / 2) / Game.SIZE_IN_METERS) * gameSize);
	}

	public float getWidth() {
		return width;
	}

	public void setWidth(float width) {
		this.width = width;
	}

	public int getPixelWidth(int gameSize) {
		return (int) ((width / Game.SIZE_IN_METERS) * gameSize);
	}

	public float getHeight() {
		return height;
	}

	public void setHeight(float height) {
		this.height = height;
	}

	public int getPixelHeight(int gameSize) {
		return (int) ((height / Game.SIZE_IN_METERS) * gameSize);
	}
	
	public boolean containsPoint(int x, int y) {
		boolean containsX = x >= getX() - getWidth() / 2 && x <= getX() + getWidth() / 2;
		boolean containsY = y >= getY() - getHeight() / 2 && y <= getY() + getHeight() / 2;
	}
	
	public boolean collidesWidth(GameObject other) {
		boolean xCollides;
		if (getX() < other.getX()) {
			xCollides =  other.getX() - getX() < getWidth();
		} else {
			xCollides = getX() - other.getX() < other.getWidth();
		}

		boolean yCollides;
		if (getY() < other.getY()) {
			yCollides =  other.getY() - getY() < getHeight();
		} else {
			yCollides = getY() - other.getY() < other.getHeight();
		}
		
		return xCollides && yCollides;
	}

	public abstract void update(Game game, long deltaTime);

	public abstract void render(Graphics2D graphics, int pixelSize);
}
