package graphics.swing.colors;

import java.awt.Color;
import java.awt.Component;

import util.GeneralListener;

public class Backgrounds {

	public static void set(Component c, Color normalColor, Color hoveredColor, Color clickedColor) {
		set(c, normalColor, hoveredColor, clickedColor, null, null);
	}

	public static void set(Component c, Color normalColor, Color hoveredColor, Color clickedColor, GeneralListener changeListener) {
		set(c, normalColor, hoveredColor, clickedColor, null, changeListener);
	}

	public static void set(Component c, Color normalColor, Color hoveredColor, Color clickedColor, Color selectedColor) {
		set(c, normalColor, hoveredColor, clickedColor, selectedColor, null);
	}

	public static void set(Component c, Color normalColor, Color hoveredColor, Color clickedColor, Color selectedColor, GeneralListener changeListener) {
		new StyleSetter(c, normalColor != null ? normalColor : c.getBackground(), hoveredColor, clickedColor, selectedColor, changeListener) {

			@Override
			void setColor(Component component, Color color) {
				component.setBackground(color);
			}
			
		};
		if (normalColor != null) {
			c.setBackground(normalColor);
		}
	}
}
