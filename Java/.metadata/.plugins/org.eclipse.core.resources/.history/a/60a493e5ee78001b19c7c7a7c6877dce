package graphics.swing.colors;

import java.awt.Color;
import java.awt.Component;

import javax.swing.JComponent;

import util.GeneralListener;

public class Borders {

	public static void set(final JComponent c, final Color normalColor, final Color hoveredColor, final Color clickedColor) {
		set(c, normalColor, hoveredColor, clickedColor, null, null);
	}

	public static void set(final JComponent c, final Color normalColor, final Color hoveredColor, final Color clickedColor, final GeneralListener changeListener) {
		set(c, normalColor, hoveredColor, clickedColor, null, changeListener);
	}

	public static void set(final JComponent c, final Color normalColor, final Color hoveredColor, final Color clickedColor, Color selectedColor) {
		set(c, normalColor, hoveredColor, clickedColor, selectedColor, null);
	}

	public static void set(final JComponent c, final Color normalColor, final Color hoveredColor, final Color clickedColor, final Color selectedColor, final GeneralListener changeListener) {
		new ColorSetter(c, normalColor != null ? normalColor : c.getBorder(), hoveredColor, clickedColor, selectedColor, changeListener) {

			@Override
			void setColor(Component component, Color color) {
				component.setForeground(color);
			}
			
		};
		if (normalColor != null) {
			c.setForeground(normalColor);
		}
	}
}
