package game;

import java.awt.Graphics2D;

public abstract class GameObject {

	private float x = 0;
	private float y = 0;
	private float width = 0;
	private float height = 0;

	public float getX() {
		return x;
	}

	public void setX(float x) {
		this.x = x;
	}

	public int getPixelX(int pixelSize) {
		return (int) ((x / Game.SIZE_IN_METERS) * pixelSize);
	}

	public float getY() {
		return y;
	}

	public void setY(float y) {
		this.y = y;
	}

	public int getPixelY(int pixelSize) {
		return (int) ((y / Game.SIZE_IN_METERS) * pixelSize);
	}

	public float getWidth() {
		return width;
	}

	public void setWidth(float width) {
		this.width = width;
	}

	public int getPixelWidth(int pixelSize) {
		return (int) ((width / Game.SIZE_IN_METERS) * pixelSize);
	}

	public float getHeight() {
		return height;
	}

	public void setHeight(float height) {
		this.height = height;
	}

	public int getPixelHeight(int pixelSize) {
		return (int) ((height / Game.SIZE_IN_METERS) * pixelSize);
	}

	public abstract void update(long deltaTime);

	public abstract void render(Graphics2D graphics, int pixelSize);
}
