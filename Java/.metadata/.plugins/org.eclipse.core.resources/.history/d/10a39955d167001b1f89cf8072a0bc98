package poopgame.gamelogic;

import java.util.HashMap;
import java.util.Map;

public class InputMap {

	private final Map<Integer, String> keyMapping = new HashMap<>();
	private final Map<Integer, String> mouseMapping = new HashMap<>();

	public static final String MOVE_LEFT = "LEFT";
	public static final String MOVE_RIGHT = "RIGHT";
	public static final String JUMP = "JUMP";
	public static final String POOP = "POOP";
	public static final String SPECIAL = "SPECIAL";

	public String getMouseMapping(int button) {
		return mouseMapping.get(button);
	}

	public String getKeyMapping(int keyCode) {
		return keyMapping.get(keyCode);
	}

}
