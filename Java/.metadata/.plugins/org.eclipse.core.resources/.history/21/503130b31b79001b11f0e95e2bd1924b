package game;

import java.awt.Color;
import java.awt.Graphics2D;

public class Exit extends GameObject {
	
	private Entrance entrance;
	
	public Exit(Entrance entrance, int x, int y) {
		this.entrance = entrance;
		setWidth(3);
		setHeight(3);
		setX(x);
		setY(y);
	}
	
	public Color getColor() {
		return entrance.getColor();
	}

	@Override
	public void update(long deltaTime) {
		// TODO: spawns
	}

	@Override
	public void render(Graphics2D graphics, int gameSize) {
		graphics.setColor(getColor());
		graphics.fillRect(getPixelMinX(gameSize), getPixelMinY(gameSize), getPixelWidth(gameSize), getPixelHeight(gameSize));
	}

}
