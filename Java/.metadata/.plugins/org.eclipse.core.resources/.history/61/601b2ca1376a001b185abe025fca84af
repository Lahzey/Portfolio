package poopgame.gamelogic.engine.actions;

import java.util.Random;

import com.badlogic.ashley.core.Entity;

import poopgame.gamelogic.Player;
import poopgame.gamelogic.engine.TimeEngine;

public class Action {
	
	private static final Random RANDOM = new Random();
	
	private long id;
	private ActionType type;
	private Player player;
	
	private long actionTime;
	
	public Action() {}
	
	public Action(ActionType type, Player player, long actionTime) {
		this(RANDOM.nextLong(), type, player, actionTime);
	}
	
	public Action(long id, ActionType type, Player player, long actionTime) {
		this.id = id;
		this.type = type;
		this.player = player;
		this.actionTime = actionTime;
	}
	
	public void execute(TimeEngine engine, Entity player) {
		Player.executeAction(this, engine, player);
	}
	
	public long getId() {
		return id;
	}
	
	public ActionType getType() {
		return type;
	}

	public Player getPlayer() {
		return player;
	}
	
	public long getActionTime() {
		return actionTime;
	}

	public void setActionTime(long actionTime) {
		this.actionTime = actionTime;
	}

}
