package game;

import java.awt.Color;
import java.awt.Graphics2D;
import java.util.Random;

public class Entrance extends GameObject {
	
	private static final Random RANDOM = new Random();
	private static final float SPAWN_CHANCE_PER_SEC = 0.5f;
	
	private Color color;
	private Exit exit;
	
	public Entrance(Color color, float x, float y) {
		this.color = color;
		setWidth(3);
		setHeight(3);
		setX(x);
		setY(y);
	}

	public Color getColor() {
		return color;
	}
	
	public Exit getExit() {
		return exit;
	}

	public void setExit(Exit exit) {
		this.exit = exit;
	}

	@Override
	public void update(Game game, long deltaTime) {
		float spawnChance = SPAWN_CHANCE_PER_SEC * (deltaTime / 1000f);
		if (spawnChance > RANDOM.nextFloat()) {
			game.spawn(new Person(this, 5));
		}
	}

	@Override
	public void render(Graphics2D graphics, int gameSize) {
		graphics.setColor(color);
		graphics.fillRect(getPixelMinX(gameSize), getPixelMinY(gameSize), getPixelWidth(gameSize), getPixelHeight(gameSize));
	}

}
