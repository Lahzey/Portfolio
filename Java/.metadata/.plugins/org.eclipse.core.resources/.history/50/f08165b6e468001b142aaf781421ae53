package poopgame.server;

import com.badlogic.gdx.scenes.scene2d.Action;
import com.esotericsoftware.kryo.Kryo;

import poopgame.gamelogic.Arena;
import poopgame.gamelogic.Champion;

public class RequestRegister {
	
	public static Class<?>[] getRequestTypes() {
		return new Class<?>[]{ JoinRequest.class, LeaveRequest.class, LobbyUpdate.class, JoinRequest[].class, ActionRequest.class, Champion.class, Arena.class, Action.class };
	}
	
	public static void registerAll(Kryo kryo) {
		for (Class<?> type : getRequestTypes()) {
			kryo.register(type);
		}
	}

}
